class Inquilino{
    constructor(nombre, dni){
        this.name=nombre;
        this.DNI=dni;
        this.tieneDeudas=false;
        this.deudas=[];
    }
    
    agregarDeuda(Deuda){
        this.deudas.push(Deuda);
    }
    
}

class Departamento{
    constructor(numeroPuerta, Inquilino){
        this.numero =numeroPuerta;
        this.inquilino= Inquilino;
    }
}



class Edificio{
    constructor(){
        this.departamentos=[];
    }
    agregarDepartamento(departamento){
        this.departamentos.push(departamento);
    }
}



class Deuda {
    constructor(periodo,montoDeuda){
        this.Periodo=periodo;
        this.MontoDeuda=montoDeuda;
        this.estado=false;
  }
  estadoPago() {
    return this.estado? "pagado" : "pendiente";
  }
  pagar(montoPago){
    if(this.MontoDeuda>0){
        this.MontoDeuda -= montoPago;
        if (this.MontoDeuda === montoPago) {
            this.estado = true; 
            console.log("Se ha pagado con éxito.");
        } else {
            console.log(`Se ha abonado: ${montoPago}. Queda por pagar: ${this.MontoDeuda}`);
        }
    }else{
        console.log("No tiene pagos Pendientes")
    }
  }
  
  
}
